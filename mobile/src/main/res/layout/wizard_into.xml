<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="48dp"
    android:paddingBottom="48dp"
    android:paddingRight="24dp"
    android:paddingLeft="24dp">

    <TextView
        android:id="@+id/wizard_intro_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/wizard_intro_welcome_text"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/wizard_intro_welcome_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wizard_intro_welcome_text"
        android:layout_marginTop="24dp"
        android:text="@string/wizard_intro_welcome_sub_text"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <ImageView
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/wiz_icon"/>

</RelativeLayout>
